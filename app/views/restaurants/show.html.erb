<h3><%= link_to "Back to list of Restaurants", restaurants_path %></h3>

<% if @restaurant %>
  <h1><%= @restaurant.name %></h1>
    <p>
      <span><%= @restaurant.street %></span><br>
      <span><%= @restaurant.city %>, </span>
      <span><%= @restaurant.state %></span>  
      <span><%= @restaurant.postal_code %></span><br>
      <span><%= @restaurant.country %></span>
    </p>
    <p>
      <%= @restaurant.neighborhood.try(:name) %>
    </p>
    <ul>
      <% @restaurant.categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>
      <% if current_user %>
        <p><%= link_to "Edit", edit_restaurant_path(@restaurant) %></p>

        <p><%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: {confirm: "Sure?"} %></p>
      <% end %> 
    <% else %>
      <p> Character not found </p>
    <% end %>

