<h1>Restaurants</h1>
​
<%= link_to "Add New Restaurant", new_restaurant_path %> ||
<%= link_to "See neighborhoods", neighborhoods_path %> ||
<%= link_to "See categories", categories_path %>
​
<table>
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Postal Code</th>
    <th>Neighborhood</th>
  </tr>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to(restaurant.name, restaurant_path(restaurant)) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.street %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.country %></td>
        <td><%= restaurant.neighborhood.try(:name) %></td>
        <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
        <td><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>