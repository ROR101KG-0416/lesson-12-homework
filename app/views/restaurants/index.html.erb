<h1>Restaurants</h1>

<p>
  <%= link_to "Click to add new restaurant", new_restaurant_path %>
</p>

<% @restaurants.each do |restaurant| %>
  <table>
    <tr>
      <td><span><%= link_to restaurant.name, restaurant_path(restaurant) %></span></td>
      <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
      <td><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Sure?"} %></td>
    </tr>
  </table>
<% end %>

