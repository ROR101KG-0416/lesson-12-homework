<h1>Restaurants</h1>

<% if current_user %>
  <%= link_to "Add new restaurant", new_restaurant_path %>
<% end %>

<% @restaurants.each do |restaurant| %>
  <table>
    <tr>
      <td><span><%= link_to restaurant.name, restaurant_path(restaurant) %></span></td>
      <% if current_user %>
        <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
        <td><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Sure?"} %></td>
      <% end %>
    </tr>
  </table>
<% end %>

